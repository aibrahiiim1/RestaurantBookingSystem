@model RestaurantBookingSystem.ViewModels.BookingConfirmationViewModel
@{
    ViewData["Title"] = "Confirm Your Reservation";
    var restaurant = ViewBag.Restaurant as RestaurantBookingSystem.Models.Restaurant;
    var occasions = ViewBag.Occasions as List<RestaurantBookingSystem.Models.Occasion>;
}

<div class="confirmation-page">
    <div class="container">
        <div class="confirmation-layout">
            <!-- Booking Summary Sidebar -->
            <aside class="booking-summary">
                <div class="summary-card">
                    <h3>Reservation Details</h3>
                    
                    <div class="restaurant-info">
                        @if (restaurant.Photos != null && restaurant.Photos.Any())
                        {
                            <img src="@restaurant.Photos.FirstOrDefault(p => p.IsPrimary)?.Url" alt="@restaurant.Name" class="restaurant-thumb" />
                        }
                        <h4>@restaurant.Name</h4>
                        <p class="restaurant-location">
                            <i class="fas fa-map-marker-alt"></i>
                            @restaurant.Area, @restaurant.City
                        </p>
                    </div>

                    <div class="summary-details">
                        <div class="detail-row">
                            <span class="detail-label">
                                <i class="fas fa-calendar"></i> Date
                            </span>
                            <span class="detail-value">@Model.Date.ToString("dddd, MMMM dd, yyyy")</span>
                        </div>
                        <div class="detail-row">
                            <span class="detail-label">
                                <i class="fas fa-clock"></i> Time
                            </span>
                            <span class="detail-value">@Model.Time.ToString("h:mm tt")</span>
                        </div>
                        <div class="detail-row">
                            <span class="detail-label">
                                <i class="fas fa-users"></i> Party Size
                            </span>
                            <span class="detail-value">@Model.PartySize @(Model.PartySize == 1 ? "person" : "people")</span>
                        </div>
                        <div class="detail-row">
                            <span class="detail-label">
                                <i class="fas fa-map-marker-alt"></i> Location
                            </span>
                            <span class="detail-value">@Model.PreferredLocation.ToString()</span>
                        </div>
                    </div>

                    <div class="cancellation-policy">
                        <i class="fas fa-info-circle"></i>
                        <p>You can cancel this reservation up to @restaurant.CancellationPolicyHours hours before your booking time.</p>
                    </div>
                </div>
            </aside>

            <!-- Guest Information Form -->
            <main class="confirmation-form">
                <div class="form-card">
                    <div class="form-header">
                        <h2>Complete Your Reservation</h2>
                        <p>Please provide your contact information to confirm your booking</p>
                    </div>

                    <form asp-controller="Booking" asp-action="Confirmation" method="post">
                        <!-- Hidden Fields -->
                        <input type="hidden" asp-for="RestaurantId" />
                        <input type="hidden" asp-for="Date" />
                        <input type="hidden" asp-for="Time" />
                        <input type="hidden" asp-for="PartySize" />
                        <input type="hidden" asp-for="PreferredLocation" />

                        <!-- Personal Information -->
                        <div class="form-section">
                            <h3>Personal Information</h3>
                            
                            <div class="form-row">
                                <div class="form-group">
                                    <label asp-for="FirstName">First Name *</label>
                                    <input type="text" asp-for="FirstName" class="form-input" placeholder="John" required />
                                    <span asp-validation-for="FirstName" class="validation-error"></span>
                                </div>
                                
                                <div class="form-group">
                                    <label asp-for="LastName">Last Name *</label>
                                    <input type="text" asp-for="LastName" class="form-input" placeholder="Doe" required />
                                    <span asp-validation-for="LastName" class="validation-error"></span>
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group">
                                    <label asp-for="Email">Email *</label>
                                    <input type="email" asp-for="Email" class="form-input" placeholder="john.doe@example.com" required />
                                    <span asp-validation-for="Email" class="validation-error"></span>
                                    <small class="form-hint">We'll send your confirmation here</small>
                                </div>
                                
                                <div class="form-group">
                                    <label asp-for="PhoneNumber">Phone Number *</label>
                                    <input type="tel" asp-for="PhoneNumber" class="form-input" placeholder="+1 (555) 123-4567" required />
                                    <span asp-validation-for="PhoneNumber" class="validation-error"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Reservation Details -->
                        <div class="form-section">
                            <h3>Reservation Details</h3>
                            
                            <div class="form-group">
                                <label asp-for="OccasionId">Occasion (Optional)</label>
                                <select asp-for="OccasionId" class="form-input">
                                    <option value="">Select an occasion</option>
                                    @foreach (var occasion in occasions)
                                    {
                                        <option value="@occasion.Id">@occasion.Name</option>
                                    }
                                </select>
                            </div>

                            <div class="form-group">
                                <label asp-for="SpecialRequests">Special Requests (Optional)</label>
                                <textarea asp-for="SpecialRequests" class="form-textarea" rows="4" 
                                          placeholder="Any dietary restrictions, accessibility needs, or special occasions we should know about?"></textarea>
                                <small class="form-hint">Maximum 1000 characters</small>
                            </div>
                        </div>

                        <!-- Preferences -->
                        <div class="form-section">
                            <div class="checkbox-group">
                                <label class="checkbox-label">
                                    <input type="checkbox" asp-for="ReceivePromotions" />
                                    <span>Yes, I want to receive special offers and promotions</span>
                                </label>
                            </div>
                        </div>

                        <!-- Terms and Conditions -->
                        <div class="terms-section">
                            <p>
                                <i class="fas fa-shield-alt"></i>
                                By clicking "Continue", you agree to our 
                                <a href="#">Terms of Service</a> and 
                                <a href="#">Privacy Policy</a>
                            </p>
                        </div>

                        <!-- Submit Button -->
                        <div class="form-actions">
                            <a asp-controller="Restaurant" asp-action="Detail" asp-route-id="@Model.RestaurantId" 
                               class="btn btn-outline">
                                <i class="fas fa-arrow-left"></i> Back
                            </a>
                            <button type="submit" class="btn btn-primary btn-large">
                                Continue to Verification <i class="fas fa-arrow-right"></i>
                            </button>
                        </div>
                    </form>
                </div>
            </main>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

