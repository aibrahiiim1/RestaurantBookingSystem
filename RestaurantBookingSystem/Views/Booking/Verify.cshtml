    color: var(--success-color);
    font-size: 1.25rem;
    flex-shrink: 0;
}

@@media (max-width: 768px) {
    .verification-card {
        padding: 2rem;
    }

    .verification-card h1 {
        font-size: 1.5rem;
    }

    .code-input {
        font-size: 2rem;
        letter-spacing: 0.5rem;
    }

    .verification-icon {
        width: 80px;
        height: 80px;
        font-size: 2.5rem;
    }
}
</style>
