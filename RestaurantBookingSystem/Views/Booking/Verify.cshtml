    font-size: 2rem;
    margin-bottom: 1rem;
    color: var(--text-color);
}

.verification-instruction {
    color: var(--text-light);
    margin-bottom: 2rem;
    line-height: 1.8;
}

.verification-instruction strong {
    color: var(--text-color);
    font-weight: 600;
}

.verification-form {
    margin-bottom: 2rem;
}

.form-group {
    margin-bottom: 1.5rem;
}

.form-group label {
    display: block;
    font-weight: 600;
    color: var(--text-color);
    margin-bottom: 0.75rem;
    text-align: left;
}

.code-input {
    width: 100%;
    padding: 1.25rem;
    font-size: 2.5rem;
    text-align: center;
    letter-spacing: 1rem;
    border: 3px solid var(--border-color);
    border-radius: var(--radius);
    font-family: 'Courier New', monospace;
    font-weight: bold;
    transition: var(--transition);
}

