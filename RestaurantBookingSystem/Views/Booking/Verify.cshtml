@model RestaurantBookingSystem.ViewModels.VerificationViewModel
@{
    ViewData["Title"] = "Verify Your Email";
}

<div class="verification-page">
    <div class="container">
        <div class="verification-card">
            <div class="verification-icon">
                <i class="fas fa-envelope-open-text"></i>
            </div>
            
            <h1>Verify Your Email</h1>
            <p class="verification-instruction">
                We've sent a 6-digit verification code to<br />
                <strong>@Model.Email</strong>
            </p>

            <form asp-controller="Booking" asp-action="Verify" method="post" class="verification-form">
                <input type="hidden" asp-for="Email" />
                
                <div class="form-group">
                    <label asp-for="VerificationCode">Enter 6-Digit Code</label>
                    <input type="text" asp-for="VerificationCode" class="code-input" 
                           maxlength="6" pattern="[0-9]{6}" inputmode="numeric"
                           placeholder="000000" autofocus required />
                    <span asp-validation-for="VerificationCode" class="validation-error"></span>
                </div>

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-error">
                        <i class="fas fa-exclamation-circle"></i>
                        @Html.ValidationSummary(false, "", new { @class = "validation-summary" })
                    </div>
                }

                <button type="submit" class="btn btn-primary btn-block btn-large">
                    <i class="fas fa-check-circle"></i> Verify & Complete Booking
                </button>
            </form>

            <div class="verification-help">
                <p>Didn't receive the code?</p>
                <button type="button" class="btn-text" onclick="resendCode()">
                    <i class="fas fa-redo"></i> Resend Code
                </button>
                <p class="help-note">The code will expire in 15 minutes</p>
            </div>

            <div class="security-note">
                <i class="fas fa-shield-alt"></i>
                <p>This verification helps us confirm your email address and secure your reservation.</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Auto-format code input
        const codeInput = document.querySelector('.code-input');
        
        codeInput.addEventListener('input', function(e) {
            // Only allow numbers
            this.value = this.value.replace(/[^0-9]/g, '');
            
            // Auto-submit when 6 digits entered
            if (this.value.length === 6) {
                // Optional: auto-submit
                // this.form.submit();
            }
        });

        // Paste support
        codeInput.addEventListener('paste', function(e) {
            e.preventDefault();
            const pastedText = (e.clipboardData || window.clipboardData).getData('text');
            const numbers = pastedText.replace(/[^0-9]/g, '').substring(0, 6);
            this.value = numbers;
            
            if (numbers.length === 6) {
                // Optional: auto-submit
                // this.form.submit();
            }
        });

        function resendCode() {
            // Show loading state
            const btn = event.target;
            const originalText = btn.innerHTML;
            btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Sending...';
            btn.disabled = true;

            // Simulate resend (implement actual endpoint)
            setTimeout(() => {
                btn.innerHTML = '<i class="fas fa-check"></i> Code Sent!';
                setTimeout(() => {
                    btn.innerHTML = originalText;
                    btn.disabled = false;
                }, 2000);
            }, 1500);

            // In production, call your resend endpoint:
            // fetch('/Booking/ResendVerificationCode', { method: 'POST' })
            //     .then(response => response.json())
            //     .then(data => { ... });
        }

        // Auto-focus on page load
        window.addEventListener('load', function() {
            codeInput.focus();
        });
    </script>
}

<style>
