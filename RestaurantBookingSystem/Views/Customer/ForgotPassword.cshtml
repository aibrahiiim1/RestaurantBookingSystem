@model RestaurantBookingSystem.ViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
    Layout = "_Layout";
}

<div class="forgot-password-page">
    <div class="container">
        <div class="forgot-password-card">
            <div class="card-icon">
                <i class="fas fa-key"></i>
            </div>

            <h1>Forgot Your Password?</h1>
            <p class="lead">No worries! Enter your email address and we'll send you instructions to reset your password.</p>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">
                    <i class="fas fa-check-circle"></i>
                    <div>
                        <strong>Email Sent!</strong>
                        <p>@TempData["Success"]</p>
                    </div>
                </div>
            }

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-circle"></i>
                    <div>
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <div>@error.ErrorMessage</div>
                        }
                    </div>
                </div>
            }

            <form asp-controller="Customer" asp-action="ForgotPassword" method="post" class="forgot-password-form">
                <div class="form-group">
                    <label asp-for="Email" class="form-label">Email Address</label>
                    <div class="input-with-icon">
                        <i class="fas fa-envelope"></i>
                        <input asp-for="Email" type="email" class="form-control" 
                               placeholder="Enter your email address" autofocus required />
                    </div>
                    <span asp-validation-for="Email" class="validation-error"></span>
                    <small class="form-help">We'll send a password reset link to this email address.</small>
                </div>

                <button type="submit" class="btn btn-primary btn-block btn-large">
                    <i class="fas fa-paper-plane"></i>
                    Send Reset Link
                </button>
            </form>

            <div class="form-footer">
                <div class="back-to-login">
                    <i class="fas fa-arrow-left"></i>
                    <a asp-controller="Customer" asp-action="Login">Back to Login</a>
                </div>

                <div class="help-section">
                    <h3>Need Help?</h3>
                    <ul>
                        <li>
                            <i class="fas fa-check"></i>
                            Make sure you entered the correct email address
                        </li>
                        <li>
                            <i class="fas fa-check"></i>
                            Check your spam/junk folder if you don't see the email
                        </li>
                        <li>
                            <i class="fas fa-check"></i>
                            The reset link will expire in 24 hours
                        </li>
                        <li>
                            <i class="fas fa-check"></i>
                            Contact support if you still need help: support@restaurant.com
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Additional Info Cards -->
        <div class="info-cards">
            <div class="info-card">
                <div class="info-icon">
                    <i class="fas fa-shield-alt"></i>
                </div>
                <h4>Secure Process</h4>
                <p>Your security is our priority. The reset link is encrypted and can only be used once.</p>
            </div>

            <div class="info-card">
                <div class="info-icon">
                    <i class="fas fa-clock"></i>
                </div>
                <h4>Quick & Easy</h4>
                <p>Get back to booking your favorite restaurants in just a few minutes.</p>
            </div>

            <div class="info-card">
                <div class="info-icon">
                    <i class="fas fa-headset"></i>
                </div>
                <h4>24/7 Support</h4>
                <p>Our support team is always here to help if you encounter any issues.</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Auto-focus email input
        window.addEventListener('load', function() {
            document.querySelector('input[type="email"]').focus();
        });

        // Form submission feedback
        document.querySelector('form').addEventListener('submit', function(e) {
            const submitBtn = this.querySelector('button[type="submit"]');
            const originalText = submitBtn.innerHTML;
            
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Sending...';
            
            // Re-enable after 3 seconds if form doesn't submit
            setTimeout(() => {
                submitBtn.disabled = false;
                submitBtn.innerHTML = originalText;
            }, 3000);
        });
    </script>
}

<style>
.forgot-password-page {
    min-height: calc(100vh - 200px);
    display: flex;
    align-items: center;
    padding: 3rem 0;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.forgot-password-card {
    background: white;
    border-radius: 20px;
    padding: 3rem;
    max-width: 600px;
    margin: 0 auto;
    box-shadow: 0 20px 60px rgba(0,0,0,0.3);
    text-align: center;
    animation: slideUp 0.5s ease-out;
}

@@keyframes slideUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.card-icon {
    width: 100px;
    height: 100px;
    background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 2rem;
    font-size: 3rem;
    color: white;
    box-shadow: 0 8px 24px rgba(218, 55, 67, 0.3);
}

.forgot-password-card h1 {
    font-size: 2rem;
    color: var(--text-color);
    margin-bottom: 1rem;
}

.lead {
    font-size: 1.125rem;
    color: var(--text-light);
    line-height: 1.8;
    margin-bottom: 2rem;
}

.alert {
    padding: 1rem 1.5rem;
    border-radius: 8px;
    margin-bottom: 1.5rem;
    display: flex;
    align-items: start;
    gap: 1rem;
    text-align: left;
}

.alert-success {
    background: #d4edda;
    border: 1px solid #c3e6cb;
    color: #155724;
}

.alert-success i {
    font-size: 1.5rem;
    flex-shrink: 0;
}

.alert-success strong {
    display: block;
    margin-bottom: 0.5rem;
}

.alert-danger {
    background: #f8d7da;
    border: 1px solid #f5c2c7;
    color: #721c24;
}

.forgot-password-form {
    margin-bottom: 2rem;
}

.form-group {
    margin-bottom: 1.5rem;
    text-align: left;
}

.form-label {
    display: block;
    font-weight: 600;
    color: var(--text-color);
    margin-bottom: 0.5rem;
}

.input-with-icon {
    position: relative;
}

.input-with-icon i {
    position: absolute;
    left: 1rem;
    top: 50%;
    transform: translateY(-50%);
    color: var(--text-light);
    font-size: 1.125rem;
}

.input-with-icon .form-control {
    padding-left: 3rem;
}

.form-control {
    width: 100%;
    padding: 0.875rem 1rem;
    border: 2px solid #e9ecef;
    border-radius: 8px;
    font-size: 1rem;
    transition: var(--transition);
}

.form-control:focus {
    outline: none;
    border-color: var(--primary-color);
    box-shadow: 0 0 0 4px rgba(218, 55, 67, 0.1);
}

.validation-error {
    display: block;
    color: var(--error-color);
    font-size: 0.875rem;
    margin-top: 0.25rem;
}

.form-help {
    display: block;
    color: var(--text-light);
    font-size: 0.875rem;
    margin-top: 0.5rem;
}

.btn-large {
    padding: 1rem 2rem;
    font-size: 1.125rem;
}

.form-footer {
    padding-top: 2rem;
    border-top: 1px solid #e9ecef;
}

.back-to-login {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    margin-bottom: 2rem;
    color: var(--text-light);
}

.back-to-login a {
    color: var(--primary-color);
    text-decoration: none;
    font-weight: 600;
}

.back-to-login a:hover {
    text-decoration: underline;
}

.help-section {
    text-align: left;
    background: #f8f9fa;
    padding: 1.5rem;
    border-radius: 8px;
}

.help-section h3 {
    font-size: 1.125rem;
    color: var(--text-color);
    margin-bottom: 1rem;
}

.help-section ul {
    list-style: none;
    padding: 0;
    margin: 0;
}

.help-section li {
    padding: 0.5rem 0;
    display: flex;
    align-items: start;
    gap: 0.75rem;
    color: var(--text-color);
    line-height: 1.6;
}

.help-section i {
    color: var(--success-color);
    flex-shrink: 0;
    margin-top: 0.25rem;
}

/* Info Cards */
.info-cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
}

.info-card {
    background: white;
    border-radius: 16px;
    padding: 2rem;
    text-align: center;
    box-shadow: 0 8px 24px rgba(0,0,0,0.2);
    transition: var(--transition);
}

.info-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 32px rgba(0,0,0,0.25);
}

.info-icon {
    width: 70px;
    height: 70px;
    background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
    font-size: 2rem;
    color: white;
}

.info-card h4 {
    font-size: 1.25rem;
    color: var(--text-color);
    margin-bottom: 0.75rem;
}

.info-card p {
    color: var(--text-light);
    line-height: 1.6;
    margin: 0;
}

@@media (max-width: 768px) {
    .forgot-password-page {
        padding: 1.5rem 0;
    }

    .forgot-password-card {
        padding: 2rem 1.5rem;
    }

    .forgot-password-card h1 {
        font-size: 1.75rem;
    }

    .info-cards {
        grid-template-columns: 1fr;
    }

    .card-icon {
        width: 80px;
        height: 80px;
        font-size: 2.5rem;
    }
}
</style>
