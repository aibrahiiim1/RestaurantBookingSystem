}

.slider {
    width: 50px;
    height: 28px;
    background: #ccc;
    border-radius: 14px;
    position: relative;
    transition: var(--transition);
}

.slider::before {
    content: '';
    position: absolute;
    width: 20px;
    height: 20px;
    background: white;
    border-radius: 50%;
    top: 4px;
    left: 4px;
    transition: var(--transition);
}

input[type="checkbox"]:checked + .slider {
    background: var(--success-color);
}

input[type="checkbox"]:checked + .slider::before {
    transform: translateX(22px);
}

.label-text strong {
    display: block;
    margin-bottom: 0.25rem;
    color: var(--text-color);
