<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Restaurant Booking System</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="container">
                <div class="navbar-brand">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="logo">
                        <i class="fas fa-utensils"></i> RestaurantBooking
                    </a>
                </div>
                <div class="navbar-menu">
                    <div class="navbar-start">
                        <a asp-controller="Home" asp-action="Index" class="navbar-item">Home</a>
                        <a asp-controller="Restaurant" asp-action="SearchResults" class="navbar-item">Find Restaurants</a>
                        <a asp-controller="Home" asp-action="HowItWorks" class="navbar-item">How It Works</a>
                    </div>
                    <div class="navbar-end">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <a asp-controller="Booking" asp-action="MyReservations" class="navbar-item">
                                <i class="fas fa-calendar-check"></i> My Reservations
                            </a>
                            <div class="navbar-item has-dropdown">
                                <a class="navbar-link">
                                    <i class="fas fa-user"></i> Account
                                </a>
                                <div class="navbar-dropdown">
                                    <a asp-controller="Customer" asp-action="Profile" class="navbar-item">Profile</a>
                                    <a asp-controller="Customer" asp-action="Favorites" class="navbar-item">Favorites</a>
                                    <hr class="navbar-divider">
                                    <form asp-controller="Customer" asp-action="Logout" method="post" style="display:inline;">
                                        <button type="submit" class="navbar-item" style="border:none; background:none; cursor:pointer; width:100%; text-align:left;">
                                            Logout
                                        </button>
                                    </form>
                                </div>
                            </div>
                        }
                        else
                        {
                            <a asp-controller="Customer" asp-action="Login" class="navbar-item">
                                <i class="fas fa-sign-in-alt"></i> Sign In
                            </a>
                            <a asp-controller="Customer" asp-action="Register" class="btn btn-primary">
                                Sign Up
                            </a>
                        }
                    </div>
                </div>
                <div class="navbar-burger" onclick="toggleMobileMenu()">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i> @TempData["Success"]
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-error">
                <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
            </div>
        }
        
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="container">
            <div class="footer-columns">
                <div class="footer-column">
                    <h4>About Us</h4>
                    <ul>
                        <li><a href="#">About</a></li>
                        <li><a href="#">Blog</a></li>
                        <li><a href="#">Careers</a></li>
                        <li><a href="#">Press</a></li>
                    </ul>
                </div>
                <div class="footer-column">
                    <h4>For Restaurants</h4>
                    <ul>
                        <li><a asp-controller="Admin" asp-action="Login">Restaurant Login</a></li>
                        <li><a href="#">List Your Restaurant</a></li>
                        <li><a href="#">Business Solutions</a></li>
                    </ul>
                </div>
                <div class="footer-column">
                    <h4>Support</h4>
                    <ul>
                        <li><a href="#">Help Center</a></li>
                        <li><a asp-controller="Home" asp-action="Contact">Contact Us</a></li>
                        <li><a href="#">Privacy Policy</a></li>
                        <li><a href="#">Terms of Service</a></li>
                    </ul>
                </div>
                <div class="footer-column">
                    <h4>Follow Us</h4>
                    <div class="social-links">
                        <a href="#"><i class="fab fa-facebook"></i></a>
                        <a href="#"><i class="fab fa-twitter"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                        <a href="#"><i class="fab fa-linkedin"></i></a>
                    </div>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2024 Restaurant Booking System. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        function toggleMobileMenu() {
            const menu = document.querySelector('.navbar-menu');
            const burger = document.querySelector('.navbar-burger');
            menu.classList.toggle('is-active');
            burger.classList.toggle('is-active');
        }

        // Auto-hide alerts after 5 seconds
        setTimeout(() => {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                alert.style.opacity = '0';
                setTimeout(() => alert.remove(), 300);
            });
        }, 5000);
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
