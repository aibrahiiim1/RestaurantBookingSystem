@model PhotoGalleryViewModel
@{
    ViewData["Title"] = "Photo Gallery";
}

<div class="photos-page">
    <div class="container-fluid">
        <!-- Page Header -->
        <div class="page-header">
            <div>
                <h1><i class="fas fa-images"></i> Photo Gallery</h1>
                <p class="subtitle">Manage your restaurant's photo collection</p>
            </div>
            <div class="header-actions">
                <button class="btn btn-outline" onclick="selectMultiple()">
                    <i class="fas fa-check-square"></i> Select Multiple
                </button>
                <button class="btn btn-primary" onclick="openUploadModal()">
                    <i class="fas fa-upload"></i> Upload Photos
                </button>
            </div>
        </div>

        <!-- Gallery Stats -->
        <div class="stats-row">
            <div class="stat-card">
                <div class="stat-icon" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                    <i class="fas fa-images"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-value">@Model.Photos.Count()</div>
                    <div class="stat-label">Total Photos</div>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-icon" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
                    <i class="fas fa-star"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-value">@Model.Photos.Count(p => p.IsFeatured)</div>
                    <div class="stat-label">Featured</div>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-icon" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
                    <i class="fas fa-utensils"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-value">@Model.Photos.Count(p => p.Category == "Food")</div>
                    <div class="stat-label">Food</div>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-icon" style="background: linear-gradient(135deg, #2da562 0%, #1e7e34 100%);">
                    <i class="fas fa-building"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-value">@Model.Photos.Count(p => p.Category == "Interior")</div>
                    <div class="stat-label">Interior</div>
                </div>
            </div>
        </div>

        <!-- Filter Bar -->
        <div class="filter-bar">
            <div class="filter-tabs">
                <button class="filter-tab active" data-category="all" onclick="filterByCategory('all')">
                    All Photos (@Model.Photos.Count())
                </button>
                <button class="filter-tab" data-category="food" onclick="filterByCategory('food')">
                    Food (@Model.Photos.Count(p => p.Category == "Food"))
                </button>
                <button class="filter-tab" data-category="interior" onclick="filterByCategory('interior')">
                    Interior (@Model.Photos.Count(p => p.Category == "Interior"))
                </button>
                <button class="filter-tab" data-category="exterior" onclick="filterByCategory('exterior')">
                    Exterior (@Model.Photos.Count(p => p.Category == "Exterior"))
                </button>
                <button class="filter-tab" data-category="featured" onclick="filterByCategory('featured')">
                    Featured (@Model.Photos.Count(p => p.IsFeatured))
                </button>
            </div>

            <div class="filter-controls">
                <div class="filter-group">
                    <label>Sort by:</label>
                    <select id="sortBy" class="form-control-sm" onchange="sortPhotos()">
                        <option value="recent">Most Recent</option>
                        <option value="oldest">Oldest First</option>
                        <option value="name">Name (A-Z)</option>
                    </select>
                </div>

                <div class="view-toggle">
                    <button class="view-btn active" data-view="grid" onclick="changeView('grid')">
                        <i class="fas fa-th"></i>
                    </button>
                    <button class="view-btn" data-view="list" onclick="changeView('list')">
                        <i class="fas fa-list"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- Bulk Actions (Hidden by default) -->
        <div id="bulkActions" class="bulk-actions" style="display: none;">
            <div class="bulk-info">
                <span id="selectedCount">0</span> photos selected
            </div>
            <div class="bulk-buttons">
                <button class="btn btn-outline" onclick="setAsFeatured()">
                    <i class="fas fa-star"></i> Set as Featured
                </button>
                <button class="btn btn-outline" onclick="downloadSelected()">
                    <i class="fas fa-download"></i> Download
                </button>
                <button class="btn btn-danger" onclick="deleteSelected()">
                    <i class="fas fa-trash"></i> Delete
                </button>
                <button class="btn btn-outline" onclick="cancelSelection()">
                    Cancel
                </button>
            </div>
        </div>

        <!-- Photo Grid -->
        <div id="photoGrid" class="photo-grid">
            @foreach (var photo in Model.Photos.OrderByDescending(p => p.UploadedAt))
            {
                <div class="photo-card" data-category="@photo.Category.ToLower()" data-photo-id="@photo.PhotoId">
                    <div class="photo-wrapper">
                        <img src="@photo.Url" alt="@photo.Title" class="photo-image" loading="lazy" />
                        
                        @if (photo.IsFeatured)
                        {
                            <div class="featured-badge">
                                <i class="fas fa-star"></i> Featured
                            </div>
                        }

                        <div class="photo-overlay">
                            <button class="overlay-btn" onclick="viewPhoto(@photo.PhotoId)" title="View">
                                <i class="fas fa-eye"></i>
                            </button>
                            <button class="overlay-btn" onclick="editPhoto(@photo.PhotoId)" title="Edit">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="overlay-btn" onclick="downloadPhoto('@photo.Url')" title="Download">
                                <i class="fas fa-download"></i>
                            </button>
                            <button class="overlay-btn btn-danger" onclick="deletePhoto(@photo.PhotoId)" title="Delete">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>

                        <div class="select-checkbox" style="display: none;">
                            <input type="checkbox" class="photo-select" data-photo-id="@photo.PhotoId" 
                                   onchange="updateSelection()" />
                        </div>
                    </div>

                    <div class="photo-info">
                        <div class="photo-title">@(photo.Title ?? "Untitled")</div>
                        <div class="photo-meta">
                            <span class="category-badge">@photo.Category</span>
                            <span class="photo-date">@photo.UploadedAt.ToString("MMM dd, yyyy")</span>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (!Model.Photos.Any())
        {
            <div class="empty-state">
                <i class="fas fa-images"></i>
                <h3>No Photos Yet</h3>
                <p>Start building your gallery by uploading your first photo.</p>
                <button class="btn btn-primary btn-large" onclick="openUploadModal()">
                    <i class="fas fa-upload"></i> Upload Photos
                </button>
            </div>
        }
    </div>
</div>

<!-- Upload Modal -->
<div id="uploadModal" class="modal">
    <div class="modal-content modal-large">
        <div class="modal-header">
            <h3>Upload Photos</h3>
            <button class="modal-close" onclick="closeUploadModal()">&times;</button>
        </div>
        <div class="modal-body">
            <div class="upload-area" id="uploadArea">
                <input type="file" id="photoFiles" multiple accept="image/*" hidden />
                <div class="upload-placeholder">
                    <i class="fas fa-cloud-upload-alt"></i>
                    <h4>Drag and drop photos here</h4>
                    <p>or</p>
                    <button type="button" class="btn btn-primary" onclick="document.getElementById('photoFiles').click()">
                        Choose Files
                    </button>
                    <p class="upload-note">Supports: JPG, PNG, WebP (Max 10MB per file)</p>
                </div>
            </div>

            <div id="uploadPreview" class="upload-preview"></div>

            <form id="uploadForm" style="display: none;">
                <div class="form-group">
                    <label class="form-label">Category</label>
                    <select id="photoCategory" class="form-control">
                        <option value="Food">Food</option>
                        <option value="Interior">Interior</option>
                        <option value="Exterior">Exterior</option>
                        <option value="Ambiance">Ambiance</option>
                        <option value="Team">Team</option>
                        <option value="Events">Events</option>
                    </select>
                </div>

                <div class="form-group">
                    <label class="checkbox-label">
                        <input type="checkbox" id="setAsFeatured" />
                        <span>Set as featured photos</span>
                    </label>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button class="btn btn-outline" onclick="closeUploadModal()">Cancel</button>
            <button class="btn btn-primary" id="uploadBtn" onclick="uploadPhotos()" disabled>
                <i class="fas fa-upload"></i> Upload Photos
            </button>
        </div>
    </div>
</div>

<!-- Photo Viewer Modal -->
<div id="viewerModal" class="modal modal-viewer">
    <div class="viewer-content">
        <button class="viewer-close" onclick="closeViewer()">&times;</button>
        <button class="viewer-nav prev" onclick="prevPhoto()">
            <i class="fas fa-chevron-left"></i>
        </button>
        <button class="viewer-nav next" onclick="nextPhoto()">
            <i class="fas fa-chevron-right"></i>
        </button>
        <img id="viewerImage" src="" alt="" />
        <div class="viewer-info">
            <div id="viewerTitle"></div>
            <div id="viewerMeta"></div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let selectedPhotos = [];
        let selectionMode = false;
        let currentPhotoIndex = 0;
        let allPhotos = [];

        function filterByCategory(category) {
            document.querySelectorAll('.filter-tab').forEach(tab => {
                tab.classList.remove('active');
            });
            event.target.classList.add('active');

            document.querySelectorAll('.photo-card').forEach(card => {
                const cardCategory = card.dataset.category;
                const isFeatured = card.querySelector('.featured-badge') !== null;
                
                if (category === 'all' || 
                    cardCategory === category ||
                    (category === 'featured' && isFeatured)) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
        }

        function changeView(view) {
            document.querySelectorAll('.view-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            event.target.classList.add('active');

            const grid = document.getElementById('photoGrid');
            if (view === 'list') {
                grid.classList.add('list-view');
            } else {
                grid.classList.remove('list-view');
            }
        }

        function sortPhotos() {
            console.log('Sort photos');
        }

        function selectMultiple() {
            selectionMode = !selectionMode;
            
            document.querySelectorAll('.select-checkbox').forEach(cb => {
                cb.style.display = selectionMode ? 'block' : 'none';
            });

            if (selectionMode) {
                document.getElementById('bulkActions').style.display = 'flex';
                event.target.innerHTML = '<i class="fas fa-times"></i> Cancel Selection';
            } else {
                document.getElementById('bulkActions').style.display = 'none';
                event.target.innerHTML = '<i class="fas fa-check-square"></i> Select Multiple';
                selectedPhotos = [];
                document.querySelectorAll('.photo-select').forEach(cb => cb.checked = false);
            }
        }

        function updateSelection() {
            selectedPhotos = Array.from(document.querySelectorAll('.photo-select:checked'))
                .map(cb => cb.dataset.photoId);
            document.getElementById('selectedCount').textContent = selectedPhotos.length;
        }

        function cancelSelection() {
            selectMultiple();
        }

        function openUploadModal() {
            document.getElementById('uploadModal').style.display = 'flex';
        }

        function closeUploadModal() {
            document.getElementById('uploadModal').style.display = 'none';
            document.getElementById('uploadForm').style.display = 'none';
            document.getElementById('uploadPreview').innerHTML = '';
            document.getElementById('photoFiles').value = '';
        }

        // Drag and drop
        const uploadArea = document.getElementById('uploadArea');
        
        uploadArea.addEventListener('dragover', (e) => {
            e.preventDefault();
            uploadArea.classList.add('drag-over');
        });

        uploadArea.addEventListener('dragleave', () => {
            uploadArea.classList.remove('drag-over');
        });

        uploadArea.addEventListener('drop', (e) => {
            e.preventDefault();
            uploadArea.classList.remove('drag-over');
            handleFiles(e.dataTransfer.files);
        });

        document.getElementById('photoFiles').addEventListener('change', function(e) {
            handleFiles(e.target.files);
        });

        function handleFiles(files) {
            document.getElementById('uploadForm').style.display = 'block';
            const preview = document.getElementById('uploadPreview');
            preview.innerHTML = '';

            Array.from(files).forEach(file => {
                if (file.type.startsWith('image/')) {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        const div = document.createElement('div');
                        div.className = 'preview-item';
                        div.innerHTML = `
                            <img src="${e.target.result}" alt="Preview" />
                            <button type="button" class="btn-remove" onclick="this.parentElement.remove()">
                                <i class="fas fa-times"></i>
                            </button>
                        `;
                        preview.appendChild(div);
                    };
                    reader.readAsDataURL(file);
                }
            });

            document.getElementById('uploadBtn').disabled = false;
        }

        function uploadPhotos() {
            const formData = new FormData();
            const files = document.getElementById('photoFiles').files;
            const category = document.getElementById('photoCategory').value;
            const isFeatured = document.getElementById('setAsFeatured').checked;

            Array.from(files).forEach(file => {
                formData.append('photos', file);
            });
            formData.append('category', category);
            formData.append('isFeatured', isFeatured);

            fetch('/Admin/UploadPhotos', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    closeUploadModal();
                    location.reload();
                }
            });
        }

        function viewPhoto(photoId) {
            // Implement photo viewer
            console.log('View photo:', photoId);
            document.getElementById('viewerModal').style.display = 'flex';
        }

        function closeViewer() {
            document.getElementById('viewerModal').style.display = 'none';
        }

        function prevPhoto() {
            // Navigate to previous photo
        }

        function nextPhoto() {
            // Navigate to next photo
        }

        function editPhoto(photoId) {
            console.log('Edit photo:', photoId);
        }

        function downloadPhoto(url) {
            window.open(url, '_blank');
        }

        function deletePhoto(photoId) {
            if (confirm('Are you sure you want to delete this photo?')) {
                fetch(`/Admin/DeletePhoto/${photoId}`, { method: 'DELETE' })
                    .then(() => location.reload());
            }
        }

        function setAsFeatured() {
            if (selectedPhotos.length === 0) {
                alert('Please select photos first');
                return;
            }

            fetch('/Admin/SetPhotosFeatured', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ photoIds: selectedPhotos })
            })
            .then(() => location.reload());
        }

        function downloadSelected() {
            alert('Downloading ' + selectedPhotos.length + ' photos...');
        }

        function deleteSelected() {
            if (confirm(`Delete ${selectedPhotos.length} selected photos?`)) {
                fetch('/Admin/DeletePhotos', {
                    method: 'DELETE',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ photoIds: selectedPhotos })
                })
                .then(() => location.reload());
            }
        }
    </script>
}

