@model RestaurantBookingSystem.ViewModels.RestaurantDetailViewModel
@{
    ViewData["Title"] = Model.Restaurant.Name;
}

<div class="restaurant-detail-page">
    <!-- Photo Gallery Section -->
    <section class="photo-gallery">
        <div class="container">
            <div class="gallery-grid">
                @if (Model.Photos.Any())
                {
                    var primaryPhoto = Model.Photos.FirstOrDefault(p => p.IsPrimary) ?? Model.Photos.First();
                    <div class="gallery-main">
                        <img src="@primaryPhoto.Url" alt="@Model.Restaurant.Name" id="mainImage" />
                    </div>
                    @if (Model.Photos.Count > 1)
                    {
                        <div class="gallery-thumbnails">
                            @foreach (var photo in Model.Photos.Take(4))
                            {
                                <div class="thumbnail @(photo.IsPrimary ? "active" : "")">
                                    <img src="@photo.Url" alt="@Model.Restaurant.Name"
                                         onclick="changeMainImage('@photo.Url', this)" />
                                </div>
                            }
                        </div>
                    }
                }
                else
                {
                    <div class="gallery-main">
                        <img src="/images/default-restaurant.jpg" alt="@Model.Restaurant.Name" />
                    </div>
                }
            </div>
        </div>
    </section>

    <div class="container">
        <div class="detail-layout">
            <!-- Main Content -->
            <main class="detail-content">
                <!-- Restaurant Header -->
                <div class="restaurant-header">
                    <div>
                        <h1 class="restaurant-name">@Model.Restaurant.Name</h1>
                        @if (!string.IsNullOrEmpty(Model.Restaurant.BrandName))
                        {
                            <p class="brand-name">@Model.Restaurant.BrandName</p>
                        }
                        <div class="restaurant-meta-info">
                            <div class="rating-large">
                                <i class="fas fa-star"></i>
                                <span class="rating-number">@Model.Restaurant.AverageRating.ToString("0.0")</span>
                                <span class="reviews-count">(@Model.Restaurant.TotalReviews reviews)</span>
                            </div>
                            <span class="separator">•</span>
                            <span class="cuisine-type">
                                <i class="fas fa-utensils"></i>
                                @Model.Restaurant.Cuisine.Name
                            </span>
                            @if (Model.Restaurant.MinimumCharge.HasValue && Model.Restaurant.MinimumCharge > 0)
                            {
                                <span class="separator">•</span>
                                <span class="price-info">
                                    Minimum: $@Model.Restaurant.MinimumCharge.Value.ToString("0.00")
                                </span>
                            }
                        </div>
                    </div>
                    <div class="header-actions">
                        <button class="btn-icon" title="Add to Favorites">
                            <i class="far fa-heart"></i>
                        </button>
                        <button class="btn-icon" title="Share">
                            <i class="fas fa-share-alt"></i>
                        </button>
                    </div>
                </div>

                <!-- Quick Info Tags -->
                <div class="quick-info-tags">
                    @if (Model.Restaurant.IsChildFriendly)
                    {
                        <span class="info-tag">
                            <i class="fas fa-child"></i> Child Friendly
                        </span>
                    }
                    @if (Model.Restaurant.HasWheelchairAccess)
                    {
                        <span class="info-tag">
                            <i class="fas fa-wheelchair"></i> Wheelchair Access
                        </span>
                    }
                    @if (Model.Restaurant.HasOutdoorSeating)
                    {
                        <span class="info-tag">
                            <i class="fas fa-tree"></i> Outdoor Seating
                        </span>
                    }
                    @if (Model.Restaurant.HasTerraceSeating)
                    {
                        <span class="info-tag">
                            <i class="fas fa-building"></i> Terrace
                        </span>
                    }
                    @if (Model.Restaurant.HasBeachView)
                    {
                        <span class="info-tag">
                            <i class="fas fa-umbrella-beach"></i> Beach View
                        </span>
                    }
                    @if (Model.Restaurant.HasBarArea)
                    {
                        <span class="info-tag">
                            <i class="fas fa-cocktail"></i> Bar Area
                        </span>
                    }
                </div>

                <!-- Active Promotions -->
                @if (Model.ActivePromotions.Any())
                {
                    <div class="promotions-section">
                        <h3><i class="fas fa-tag"></i> Current Offers</h3>
                        <div class="promotions-list">
                            @foreach (var promo in Model.ActivePromotions)
                            {
                                <div class="promotion-card">
                                    <div class="promo-icon">
                                        <i class="fas fa-percent"></i>
                                    </div>
                                    <div class="promo-details">
                                        <h4>@promo.Title</h4>
                                        <p>@promo.Description</p>
                                        @if (!string.IsNullOrEmpty(promo.PromoCode))
                                        {
                                            <span class="promo-code">Code: @promo.PromoCode</span>
                                        }
                                    </div>
                                    <div class="promo-discount">
                                        @promo.DiscountPercentage% OFF
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }

                <!-- About Section -->
                <section class="detail-section">
                    <h2>About @Model.Restaurant.Name</h2>
                    <p class="description">@Model.Restaurant.Description</p>
                </section>

                <!-- Location & Contact -->
                <section class="detail-section">
                    <h2>Location & Contact</h2>
                    <div class="contact-grid">
                        <div class="contact-item">
                            <i class="fas fa-map-marker-alt"></i>
                            <div>
                                <h4>Address</h4>
                                <p>
                                    @Model.Restaurant.AddressLine1<br />
                                    @if (!string.IsNullOrEmpty(Model.Restaurant.AddressLine2))
                                    {
                                        @Model.Restaurant.AddressLine2
                                    
                                        <br />
                                    }
                                    @Model.Restaurant.City, @Model.Restaurant.Area @Model.Restaurant.PostalCode<br />
                                    @Model.Restaurant.Country
                                </p>
                            </div>
                        </div>
                        <div class="contact-item">
                            <i class="fas fa-phone"></i>
                            <div>
                                <h4>Phone</h4>
                                <p><a href="tel:@Model.Restaurant.PhoneNumber">@Model.Restaurant.PhoneNumber</a></p>
                            </div>
                        </div>
                        <div class="contact-item">
                            <i class="fas fa-envelope"></i>
                            <div>
                                <h4>Email</h4>
                                <p><a href="mailto:@Model.Restaurant.Email">@Model.Restaurant.Email</a></p>
                            </div>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.Restaurant.WebsiteUrl))
                        {
                            <div class="contact-item">
                                <i class="fas fa-globe"></i>
                                <div>
                                    <h4>Website</h4>
                                    <p><a href="@Model.Restaurant.WebsiteUrl" target="_blank">Visit Website</a></p>
                                </div>
                            </div>
                        }
                    </div>
                </section>

                <!-- Opening Hours -->
                <section class="detail-section">
                    <h2>Opening Hours</h2>
                    <div class="opening-hours">
                        @foreach (var day in Enum.GetValues(typeof(DayOfWeek)).Cast<DayOfWeek>())
                        {
                            var hours = Model.OpeningTimes.FirstOrDefault(o => o.DayOfWeek == day);
                            <div class="hours-row @(day == DateTime.Today.DayOfWeek ? "today" : "")">
                                <span class="day-name">@day.ToString()</span>
                                <span class="hours-time">
                                    @*                                     @if (hours != null && !hours.IsClosed)
                                    {
                                        @hours.OpenTime.ToString("h:mm tt") - @hours.CloseTime.ToString("h:mm tt")!

                                    } *@
                                    else
                                    {
                                    <span class="closed-text">Closed</span>
                                    }
                                </span>
                            </div>
                        }
                    </div>
                </section>

                <!-- Additional Information -->
                <section class="detail-section">
                    <h2>Additional Information</h2>
                    <div class="info-grid">
                        <div class="info-item">
                            <i class="fas fa-users"></i>
                            <div>
                                <h4>Seating Capacity</h4>
                                <p>@Model.Restaurant.TotalSeatingCapacity guests</p>
                            </div>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.Restaurant.DressCode))
                        {
                            <div class="info-item">
                                <i class="fas fa-tshirt"></i>
                                <div>
                                    <h4>Dress Code</h4>
                                    <p>@Model.Restaurant.DressCode</p>
                                </div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.Restaurant.ParkingDetails))
                        {
                            <div class="info-item">
                                <i class="fas fa-parking"></i>
                                <div>
                                    <h4>Parking</h4>
                                    <p>@Model.Restaurant.ParkingDetails</p>
                                </div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.Restaurant.PaymentOptions))
                        {
                            <div class="info-item">
                                <i class="fas fa-credit-card"></i>
                                <div>
                                    <h4>Payment Options</h4>
                                    <p>@Model.Restaurant.PaymentOptions</p>
                                </div>
                            </div>
                        }
                    </div>
                </section>

                <!-- Reviews Section -->
                @if (Model.Reviews.Any())
                {
                    <section class="detail-section">
                        <h2>Customer Reviews</h2>
                        <div class="reviews-summary">
                            <div class="rating-breakdown">
                                <div class="rating-score">
                                    <span class="score-number">@Model.Restaurant.AverageRating.ToString("0.0")</span>
                                    <div class="stars">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            <i class="fas fa-star @(i <= Model.Restaurant.AverageRating ? "" : "empty")"></i>
                                        }
                                    </div>
                                    <span class="total-reviews">@Model.Restaurant.TotalReviews reviews</span>
                                </div>
                            </div>
                        </div>

                        <div class="reviews-list">
                            @foreach (var review in Model.Reviews.Take(5))
                            {
                                <div class="review-card">
                                    <div class="review-header">
                                        <div class="reviewer-info">
                                            <div class="reviewer-avatar">
                                                <i class="fas fa-user"></i>
                                            </div>
                                            <div>
                                                <h4>@review.CustomerName</h4>
                                                <div class="review-rating">
                                                    @for (int i = 1; i <= 5; i++)
                                                    {
                                                        <i class="fas fa-star @(i <= review.Rating ? "" : "empty")"></i>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                        <span class="review-date">@review.ReviewDate.ToString("MMM dd, yyyy")</span>
                                    </div>
                                    <h5 class="review-title">@review.Title</h5>
                                    <p class="review-comment">@review.Comment</p>
                                    <div class="review-ratings-detail">
                                        <span class="rating-detail"><i class="fas fa-utensils"></i> Food: @review.FoodRating/5</span>
                                        <span class="rating-detail"><i class="fas fa-concierge-bell"></i> Service: @review.ServiceRating/5</span>
                                        <span class="rating-detail"><i class="fas fa-building"></i> Ambiance: @review.AmbianceRating/5</span>
                                    </div>
                                    @if (review.IsVerified)
                                    {
                                        <span class="verified-badge">
                                            <i class="fas fa-check-circle"></i> Verified Diner
                                        </span>
                                    }
                                </div>
                            }
                        </div>
                    </section>
                }
            </main>

            <!-- Booking Sidebar -->
            <aside class="booking-sidebar">
                <div class="booking-widget">
                    <h3>Make a Reservation</h3>
                    <form asp-controller="Booking" asp-action="InitiateBooking" method="post" class="booking-form">
                        <input type="hidden" asp-for="BookingForm.RestaurantId" />

                        <div class="form-group">
                            <label>
                                <i class="fas fa-users"></i> Party Size
                            </label>
                            <select asp-for="BookingForm.PartySize" class="form-input" required>
                                @for (int i = 1; i <= 20; i++)
                                {
                                    <option value="@i">@i @(i == 1 ? "person" : "people")</option>
                                }
                            </select>
                        </div>

                        <div class="form-group">
                            <label>
                                <i class="fas fa-calendar"></i> Date
                            </label>
                            <input type="date" asp-for="BookingForm.Date" class="form-input"
                                   min="@DateTime.Today.ToString("yyyy-MM-dd")" required />
                        </div>

                        <div class="form-group">
                            <label>
                                <i class="fas fa-clock"></i> Time
                            </label>
                            <select asp-for="BookingForm.Time" class="form-input" id="timeSelect" required>
                                <option value="">Select a time</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label>
                                <i class="fas fa-map-marker-alt"></i> Table Location
                            </label>
                            <select asp-for="BookingForm.PreferredLocation" class="form-input">
                                @foreach (var location in Model.AvailableTableLocations)
                                {
                                    <option value="@((int)location)">@location.ToString()</option>
                                }
                            </select>
                        </div>

                        <button type="submit" class="btn btn-primary btn-block">
                            <i class="fas fa-calendar-check"></i> Find a Table
                        </button>
                    </form>

                    <div class="booking-info">
                        <p class="info-text">
                            <i class="fas fa-info-circle"></i>
                            Reservations can be cancelled up to @Model.Restaurant.CancellationPolicyHours hours before your booking time.
                        </p>
                    </div>
                </div>

                <!-- Map (placeholder) -->
                <div class="map-widget">
                    <h4>Location</h4>
                    <div class="map-placeholder">
                        <a href="https://www.google.com/maps/search/?api=1&query=@Model.Restaurant.Latitude,@Model.Restaurant.Longitude"
                           target="_blank" class="btn btn-outline btn-block">
                            <i class="fas fa-map-marked-alt"></i> View on Map
                        </a>
                    </div>
                </div>
            </aside>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function changeMainImage(url, thumbnail) {
            document.getElementById('mainImage').src = url;
            document.querySelectorAll('.thumbnail').forEach(t => t.classList.remove('active'));
            thumbnail.parentElement.classList.add('active');
        }

        // Load available time slots
        document.addEventListener('DOMContentLoaded', function() {
            const dateInput = document.querySelector('input[name="BookingForm.Date"]');
            const partySizeSelect = document.querySelector('select[name="BookingForm.PartySize"]');
            const timeSelect = document.getElementById('timeSelect');

            function loadTimeSlots() {
                const date = dateInput.value;
                const partySize = partySizeSelect.value;
                const restaurantId = @Model.Restaurant.Id;

                if (!date || !partySize) return;

                fetch(`/Restaurant/GetAvailableTimeSlots?restaurantId=${restaurantId}&date=${date}&partySize=${partySize}`)
                    .then(response => response.json())
                    .then(data => {
                        timeSelect.innerHTML = '<option value="">Select a time</option>';
                        if (data.timeSlots && data.timeSlots.length > 0) {
                            data.timeSlots.forEach(slot => {
                                if (slot.isAvailable) {
                                    const option = document.createElement('option');
                                    option.value = slot.time;
                                    option.textContent = `${slot.displayTime} (${slot.availableTables} tables available)`;
                                    timeSelect.appendChild(option);
                                }
                            });
                        } else {
                            const option = document.createElement('option');
                            option.textContent = 'No available times';
                            option.disabled = true;
                            timeSelect.appendChild(option);
                        }
                    })
                    .catch(error => {
                        console.error('Error loading time slots:', error);
                    });
            }

            dateInput.addEventListener('change', loadTimeSlots);
            partySizeSelect.addEventListener('change', loadTimeSlots);

            // Set default date to tomorrow
            if (!dateInput.value) {
                const tomorrow = new Date();
                tomorrow.setDate(tomorrow.getDate() + 1);
                dateInput.value = tomorrow.toISOString().split('T')[0];
                loadTimeSlots();
            }
        });
    </script>
}

